pipeline {
    agent any

    environment {
        DOCKER_HUB_REPO = 'faraazrepodockerpublic'
        SONARQUBE_SERVER = 'http://192.168.43.199:9000'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build with Maven') {
            steps {
                sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app/ && mvn clean package'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('sonarqube') {
                    sh "mvn sonar:sonar -Dsonar.host.url=${SONARQUBE_SERVER}"
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    def dockerImage = docker.build("${DOCKER_HUB_REPO}:${env.BUILD_NUMBER}")
                    dockerImage.push()
                }
            }
        }
    }
}
